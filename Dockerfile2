FROM pfiff45/gogs
RUN git clone http://haribro.ignorelist.com:10080/harry/IPMan.git
RUN go get "golang.org/x/crypto/ssh"
RUN go build -o vmrun ./IPMan/sshSessioner.go ./IPMan/prx.go
RUN chmod +x vmrun
RUN mv vmrun /bin/
RUN rm -r IPMan
RUN echo "[Unit]\nDescription=vmrun\n\n[Service]\nRestart=always\nExecStart=/bin/vmrun\nExecStop=/bin/sleep 30\n\n[Install]\nWantedBy=multi-user.target" >> /etc/systemd/system/vmrun.service
RUN ln -s /etc/systemd/system/vmrun.service /etc/systemd/system/multi-user.target.wants/vmrun.service